//---------------------------------------------------------------------------

#include <vcl.h>
#pragma hdrstop

#include "Unit1.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)
#pragma resource "*.dfm"
TForm1 *Form1;
enum STATE
{
N0,
N1,
N2,
N3,
N4
};
STATE current = N0;
//---------------------------------------------------------------------------
__fastcall TForm1::TForm1(TComponent* Owner)
	: TForm(Owner)
{
}
//---------------------------------------------------------------------------
void __fastcall TForm1::Button1Click(TObject *Sender)
{
String Chain;
Chain = Edit1->Text;
Chain.LowerCase();
for(int i = 1; i <= Chain.Length();i++ )
  {
  switch(current)
    {
	case N0:
	  if(Chain[i]=='x')
        {
		Memo1->Lines->Add("Переходим в состояние 2");
		current = N1;
		}
	  if(Chain[i]=='y')
		{
		Memo1->Lines->Add("Переходим в состояние 4");
		current = N3;
        }
    break;
	case N1:
	  if(Chain[i]=='x')
        {
		Memo1->Lines->Add("Переходим в состояние 5");
		current = N4;
        }
	  if(Chain[i]=='y')
		{
		Memo1->Lines->Add("Переходим в состояние 3");
		current = N2;
        }
    break;
	case N2:
	  if(Chain[i]=='x')
		{
		Memo1->Lines->Add("Переходим в состояние 2");
		current = N1;
        }
	  if(Chain[i]=='y')
        {
		Memo1->Lines->Add("Переходим в состояние 4");
		current = N3;
        }
    break;
	case N3:
	  if(Chain[i]=='x')
        {
		Memo1->Lines->Add("Переходим в состояние 5");
		current = N4;
        }
	  if(Chain[i]=='y')
        {
		Memo1->Lines->Add("Переходим в состояние 3");
		current = N2;
		}
    break;
	case N4:
	  if(Chain[i]=='x')
		{
		Memo1->Lines->Add("Переходим в состояние 1");
		current = N0;
        }
	  if(Chain[i]=='y')
		{
		Memo1->Lines->Add("Переходим в состояние 2");
		current = N1;
        }
	break;
    }
  }
  if(current==N4)   Memo1->Lines->Add("Цепочка пренадлежит языку");
  else   Memo1->Lines->Add("Цепочка не пренадлежит языку");
}
//---------------------------------------------------------------------------


void __fastcall TForm1::Edit1KeyPress(TObject *Sender, System::WideChar &Key)
{
if ((Key>='0')&&(Key<='9')) {Key=NULL;}
else if ((Key>=8&&Key<=46)||Key=='y'||Key=='x') {}
else Key = 0;
}
//---------------------------------------------------------------------------

